<% layout('/layouts/boilerPlate')%>

    <div class="row">
        <h1 class="text-center">Edit Campground</h1>
            <div class="col-6 offset-3 my-5">
                <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST" novalidate class="validated-form">
                    <div>
                        <label class="form-label" for="title">Title</label>
                        <input class="form-control" type="text" id="title" name="campground[title]" value="<%=campground.title%>" required>
                    </div>
                    <div>
                        <label class="form-label" for="location">Location</label>
                        <input class="form-control" type="text" id="location" name="campground[location]" value="<%=campground.location%>" required>
                    </div>
                    <div>
                        <label class="form-label" for="image">Image URL</label>
                        <input class="form-control" type="text" id="image" name="campground[image]" value="<%=campground.image%>" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="price">Campground Price</label>
                        <div class="input-group mb-3">
                            <span class="input-group-text">Rupee</span>
                            <input type="text" id="price" class="form-control" placeholder="00/-" name="campground[price]" aria-label="price-label" aria-describedby="price-label" value="<%=campground.price%>" required>
                          </div>
                    </div>
                    <div>
                        <label class="form-label" for="description">Description</label>
                        <textarea style="height: 80px;" class="form-control" type="text" id="description" name="campground[description]" required> <%= campground.description%> </textarea>
                    </div>
                    <div style="text-align: center;"><button class="btn btn-info my-3">Save Changes</button></div>
                </form>
                <a href="/campgrounds/<%= campground._id%>">Back to Campground</a>
            </div>
    </div>